<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ctx="http://www.springframework.org/schema/context"
       xmlns:cxf="http://camel.apache.org/schema/cxf" xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring" xmlns:jaxws="http://cxf.apache.org/jaxws"
       xsi:schemaLocation="
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://camel.apache.org/schema/spring-security http://camel.apache.org/schema/spring-security/camel-spring-security.xsd
       http://cxf.apache.org/transports/camel http://cxf.apache.org/transports/camel.xsd http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">


    <ctx:annotation-config/>
    <ctx:component-scan base-package="fi.vm.sade.valinta.kooste.valintalaskenta"/>
    <ctx:component-scan base-package="fi.vm.sade.valinta.kooste.valintakokeet.komponentti.proxy"/>
    <ctx:component-scan base-package="fi.vm.sade.valinta.kooste.tarjonta.komponentti"/>
    <ctx:component-scan base-package="fi.vm.sade.valinta.kooste.hakemus"/>

    <routeContext id="valintalaskentaRoutes" xmlns="http://camel.apache.org/schema/spring">
        <route>
            <from uri="direct:kaynnistaHakukohteenValintalaskentaReitti"/>
            <log message="kaynnistaHakukohteenValintalaskentaReitti hakukohde: ${body.args[0]} valinnanvaihe: ${body.args[1]}" />
            <policy ref="admin">
            	<process ref="securityPreprocessor"/>
            	<setProperty propertyName="hakukohdeOid">
                    <simple>${body.args[0]}</simple>
                </setProperty>
                <setProperty propertyName="valinnanvaihe">
                    <simple>${body.args[1]}</simple>
                </setProperty>
                <to uri="bean:haeValintaperusteetKomponentti"/>
                <setProperty propertyName="valintaperusteet">
                    <simple>${body}</simple>
                </setProperty>
                <to uri="bean:haeHakukohteenHakemuksetKomponentti"/>
                <setProperty propertyName="hakemukset">
                    <simple>${body}</simple>
                </setProperty>
                <to uri="bean:suoritaLaskentaKomponentti"/>
            </policy>
            <log message="kaynnistaHakukohteenValintalaskentaReitti ajettu" />
        </route>
        <route>
            <from uri="direct:kaynnistaHaunValintalaskentaReitti"/>
            <log message="kaynnistaHaunValintalaskentaReitti haku: ${body.args[0]}" />
            <setProperty propertyName="hakuOid">
                <simple>${body.args[0]}</simple>
            </setProperty>
            <policy ref="admin">
                <process ref="securityPreprocessor"/>
                <to uri="bean:hakukohteetTarjonnaltaKomponentti"/>
                <split parallelProcessing="false" stopOnException="false">
                    <method bean="splitHakukohteetKomponentti" method="splitHakukohteet"/>
                    <process ref="securityPreprocessor"/>
	            	<setProperty propertyName="hakukohdeOid"><simple>${body}</simple></setProperty>
	                <!-- setProperty propertyName="valinnanvaihe"><simple>null</simple></setProperty -->
	                <to uri="bean:haeValintaperusteetKomponentti"/>
	                <setProperty propertyName="valintaperusteet"><simple>${body}</simple></setProperty>
	                <to uri="bean:haeHakukohteenHakemuksetKomponentti"/>
	                <setProperty propertyName="hakemukset"><simple>${body}</simple></setProperty>
	                <to uri="bean:suoritaLaskentaKomponentti"/>
                </split>
            </policy>
            <log message="kaynnistaHaunValintalaskentaReitti ajettu" />
        </route>
    </routeContext>

    <camelContext id="valintalaskentaCamelContext"
                  autoStartup="true" xmlns="http://camel.apache.org/schema/spring">
        <!-- Proxy Jersey REST triggerin ja Camelin eriyttÃ¤miseen toisistaan -->
        <proxy id="hakukohteenValintalaskentaAktivointiRajapinta"
               serviceInterface="fi.vm.sade.valinta.kooste.valintalaskenta.proxy.HakukohteenValintalaskentaAktivointiProxy"
               serviceUrl="direct:kaynnistaHakukohteenValintalaskentaReitti"/>
        <proxy id="haunValintalaskentaAktivointiRajapinta"
               serviceInterface="fi.vm.sade.valinta.kooste.valintalaskenta.proxy.HaunValintalaskentaAktivointiProxy"
               serviceUrl="direct:kaynnistaHaunValintalaskentaReitti"/>
        <routeContextRef ref="valintalaskentaRoutes"/>
    </camelContext>
</beans>
