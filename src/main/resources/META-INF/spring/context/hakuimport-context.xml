<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ctx="http://www.springframework.org/schema/context"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <ctx:annotation-config />

    <ctx:component-scan base-package="fi.vm.sade.valinta.kooste.hakuimport" />

    <util:properties id="hakuimportProperties">
        <beans:prop key="tarjonta.rest">${valintalaskentakoostepalvelu.tarjonta.rest.url}
        </beans:prop>
    </util:properties>

    <camelContext id="hakukohdeImportCamelContext"
                  autoStartup="true" xmlns="http://camel.apache.org/schema/spring">
        <propertyPlaceholder id="hakuimportContextProperties"
                             location="ref:hakuimportProperties" />
        <proxy id="hakuImportAktivointiRajapinta"
               serviceInterface="fi.vm.sade.valinta.kooste.hakuimport.HakuImportAktivointiProxy"
               serviceUrl="direct:kaynnistaHakuImportReitti" />
        <routeContextRef ref="hakuImportRoutes" />
    </camelContext>

    <routeContext id="hakuImportRoutes" xmlns="http://camel.apache.org/schema/spring">
        <route id="hakuImportRoute" >
            <from uri="direct:kaynnistaHakuImportReitti" />
            <policy ref="admin">
                <process ref="securityPreprocessor"/>
                    <to uri="bean:suoritaHakuImportKomponentti" />
            </policy>
        </route>
    </routeContext>


</beans>