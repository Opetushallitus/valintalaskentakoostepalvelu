<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ctx="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<ctx:annotation-config />
	<ctx:component-scan base-package="fi.vm.sade.valinta.kooste.valintatieto.komponentti" />

	<bean id="valintatietoRetryHandler" class="org.apache.camel.builder.DefaultErrorHandlerBuilder" >
		<property name="redeliveryPolicy" ref="redeliveryPolicy"/>
	</bean>

	<camelContext depends-on="valintatietoRetryHandler" id="valintatietoCamelContext" autoStartup="true" xmlns="http://camel.apache.org/schema/spring">
		<proxy id="valintatietoProxy"
			serviceInterface="fi.vm.sade.valinta.kooste.valintatieto.komponentti.proxy.ValintatietoProxy"
			serviceUrl="direct:valintatietoReitti" />
		<proxy id="valintatietohakukohteelleProxy"
			serviceInterface="fi.vm.sade.valinta.kooste.valintatieto.komponentti.proxy.ValintatietoHakukohteelleProxy"
			serviceUrl="direct:valintatietoHakukohteelleReitti" />
		
        <route errorHandlerRef="valintatietoRetryHandler">
			<from uri="direct:valintatietoHakukohteelleReitti"/>
			<setProperty propertyName="valintakoeOid"><simple>${body.args[0]}</simple></setProperty>
			<setProperty propertyName="hakukohdeOid"><simple>${body.args[1]}</simple></setProperty>
			<to uri="bean:valintatietoHakukohteelleKomponentti"/>
		</route>
		<route errorHandlerRef="valintatietoRetryHandler">
			<from uri="direct:valintatietoReitti"/>
			<setProperty propertyName="hakuOid"><simple>${body}</simple></setProperty>
			<to uri="bean:valintatietokomponentti"/>
		</route>
	</camelContext>

</beans>