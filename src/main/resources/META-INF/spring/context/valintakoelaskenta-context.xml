<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ctx="http://www.springframework.org/schema/context"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">


    <ctx:annotation-config/>
    <ctx:component-scan base-package="fi.vm.sade.valinta.kooste.valintakokeet"/>
    <ctx:component-scan base-package="fi.vm.sade.valinta.kooste.hakemus"/>

    <util:properties id="valintakoelaskentaProperties">
        <beans:prop key="hakemus.rest.url">${valintalaskentakoostepalvelu.hakemus.rest.url}</beans:prop>
    </util:properties>
	
	<bean id="valintakoelaskentaRetryHandler" class="org.apache.camel.builder.DefaultErrorHandlerBuilder" >
		<property name="redeliveryPolicy" ref="redeliveryPolicy"/>
	</bean>


    <camelContext depends-on="valintakoelaskentaRetryHandler" id="valintakoelaskentaCamelContext"
                  autoStartup="true" xmlns="http://camel.apache.org/schema/spring">
        <propertyPlaceholder id="valintakoelaskentaContextProperties" location="ref:valintakoelaskentaProperties"/>
        <proxy id="valintakoelaskentaProxy"
               serviceInterface="fi.vm.sade.valinta.kooste.valintakokeet.komponentti.proxy.ValintakoelaskentaProxy"
               serviceUrl="direct:valintakoelaskentaReitti"/>
        <proxy id="haunValintakoelaskentaAktivointiRajapinta"
               serviceInterface="fi.vm.sade.valinta.kooste.valintakokeet.HaunValintakoelaskentaAktivointiProxy"
               serviceUrl="direct:kaynnistaHaunValintakoelaskentaReitti"/>
        <proxy id="hakukohteenValintakoelaskentaAktivointiRajapinta"
               serviceInterface="fi.vm.sade.valinta.kooste.valintakokeet.HakukohteenValintakoelaskentaAktivointiProxy"
               serviceUrl="direct:kaynnistaHakukohteenValintakoelaskentaReitti"/>
        						
        <route errorHandlerRef="valintakoelaskentaRetryHandler">
            <from uri="direct:valintakoelaskentaReitti"/>
            <setProperty propertyName="hakemustyyppi"><simple>${body.args[0]}</simple></setProperty>
            <setProperty propertyName="valintaperusteet"><simple>${body.args[1]}</simple></setProperty>
            <process ref="securityPreprocessor"/>
            <to uri="bean:valintakoelaskentakomponentti"/>
        </route>
        <route>
            <from uri="direct:kaynnistaHakemuksenValintakoelaskentaReitti"/>
            <setProperty propertyName="hakemusOid"><simple>${body}</simple></setProperty>
            <policy ref="admin">
                <process ref="securityPreprocessor"/>
                <to uri="bean:laskeValintakoeosallistumisetHakemukselleKomponentti"/>
            </policy>
        </route>
        <route>
            <from uri="direct:kaynnistaHaunValintakoelaskentaReitti"/>
            <setProperty propertyName="hakuOid">
                <simple>${body}</simple>
            </setProperty>
            <policy ref="admin">
                <process ref="securityPreprocessor"/>
                <to uri="bean:haeHaunHakemuksetKomponentti"/>
                <split parallelProcessing="false">
                    <method bean="hakemusOidSplitter" method="splitHakemusOid"/>
                    <process ref="securityPreprocessor"/>
                    <setProperty propertyName="hakemusOid"><simple>${body}</simple></setProperty>
                    <to uri="bean:laskeValintakoeosallistumisetHakemukselleKomponentti"/>
                </split>
            </policy>
        </route>
        <route>
            <from uri="direct:kaynnistaHakukohteenValintakoelaskentaReitti" />
            <setProperty propertyName="hakukohdeOid">
                <simple>${body}</simple>
            </setProperty>
            <policy ref="admin">
                <process ref="securityPreprocessor"/>
                <to uri="bean:haeHakukohteenHakemuksetKomponentti"/>
                <split parallelProcessing="false">
                    <method bean="hakemusOidSplitter" method="splitHakemusOid"/>
                    <process ref="securityPreprocessor"/>
                    <setProperty propertyName="hakemusOid"><simple>${body}</simple></setProperty>
                    <to uri="bean:laskeValintakoeosallistumisetHakemukselleKomponentti"/>
                </split>
            </policy>
        </route>
    </camelContext>
</beans>
