<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ctx="http://www.springframework.org/schema/context"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd

       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">


    <ctx:annotation-config/>
    <ctx:component-scan
            base-package="fi.vm.sade.valinta.kooste.valintakokeet,fi.vm.sade.valinta.kooste.paasykokeet.komponentti.proxy"/>

    <util:properties id="valintakoelaskentaProperties">
        <beans:prop key="hakemus.rest.url">${valintalaskentakoostepalvelu.hakemus.rest.url}</beans:prop>
    </util:properties>

    <routeContext id="haunValintakoelaskentaRoutes" xmlns="http://camel.apache.org/schema/spring">
        <route>
            <from uri="direct:kaynnistaHaunValintakoelaskentaReitti"/>
            <setProperty propertyName="hakuOid">
                <simple>${body}</simple>
            </setProperty>
            <policy ref="admin">
                <to uri="bean:haeHaunHakemuksetKomponentti"/>
                <split parallelProcessing="false">
                    <simple>body</simple>
                    <to uri="direct:kaynnistaHakemuksenValintakoelaskentaReitti"/>
                </split>
            </policy>
        </route>
        <route>
            <from uri="direct:kaynnistaHakemuksenValintakoelaskentaReitti"/>
            <setProperty propertyName="hakemusOid">
                <simple>${body}</simple>
            </setProperty>
            <policy ref="admin">
                <to uri="bean:laskeValintakoeosallistumisetHakemukselleKomponentti"/>
            </policy>
        </route>

    </routeContext>

    <camelContext id="haunValintakoelaskentaCamelContext"
                  autoStartup="true" xmlns="http://camel.apache.org/schema/spring">
        <propertyPlaceholder id="valintakoelaskentaContextProperties" location="ref:valintakoelaskentaProperties"/>
        <proxy id="haunValintakoelaskentaAktivointiRajapinta"
               serviceInterface="fi.vm.sade.valinta.kooste.valintakokeet.HaunValintakoelaskentaAktivointiProxy"
               serviceUrl="direct:kaynnistaHaunValintakoelaskentaReitti"/>
        <routeContextRef ref="haunValintakoelaskentaRoutes"/>
    </camelContext>

</beans>
