<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ctx="http://www.springframework.org/schema/context"
       xmlns:cxf="http://camel.apache.org/schema/cxf" xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring" xmlns:jaxws="http://cxf.apache.org/jaxws"
       xsi:schemaLocation="
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://camel.apache.org/schema/spring-security http://camel.apache.org/schema/spring-security/camel-spring-security.xsd
       http://cxf.apache.org/transports/camel http://cxf.apache.org/transports/camel.xsd http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">


	<ctx:annotation-config />
	<ctx:component-scan base-package="fi.vm.sade.valinta.kooste.paasykokeet" />
	<ctx:component-scan base-package="fi.vm.sade.valinta.kooste.tarjonta" />


	<routeContext id="valintakoelaskentaRoutes" xmlns="http://camel.apache.org/schema/spring">
		<route id="valintakoelaskentaReitti">
			<from uri="direct:kaynnistaValintakoelaskentaReitti" />
			<setProperty propertyName="hakukohdeOid">
				<simple>${body}</simple>
			</setProperty>
            <!--<policy ref="admin">-->
			<to uri="bean:haeHakemusKomponentti" />
			<setProperty propertyName="hakemukset">
				<simple>${body}</simple>
			</setProperty>
			<to uri="bean:valintakoeLaskeKomponentti" />
            <!--</policy>-->
		</route>
		<!-- Kutsuu ylempaa reittia moniajoisesti jokaiselle tarjonnalta saadulle 
			hakukohdeoidille -->
		<route id="tarjontaReitti">
			<from uri="direct:kaynnistaTarjonnanHakukohteetReitti" />
			<setProperty propertyName="hakuOid">
				<simple>${body}</simple>
			</setProperty>
            <!--<policy ref="admin">-->
                <to uri="bean:hakukohteetTarjonnaltaKomponentti" />
                <!-- TODO: selvitÃ¤ miten parellelProcessing saa toimimaan -->
                <split parallelProcessing="false">
                    <method bean="splitHakukohteetKomponentti" method="splitHakukohteet" />
                    <to uri="direct:kaynnistaValintakoelaskentaReitti" />
                </split>
            <!--</policy>-->
		</route>
	</routeContext>

	<camelContext id="valintakoelaskentaCamelContext"
		autoStartup="true" xmlns="http://camel.apache.org/schema/spring">
		<proxy id="tarjonnanHakukohteetAktivointiRajapinta"
			serviceInterface="fi.vm.sade.valinta.kooste.tarjonta.TarjontaHakukohteetAktivointiProxy"
			serviceUrl="direct:kaynnistaTarjonnanHakukohteetReitti" />

		<proxy id="valintakoelaskentaAktivointiRajapinta"
			serviceInterface="fi.vm.sade.valinta.kooste.paasykokeet.ValintakoelaskentaAktivointiProxy"
			serviceUrl="direct:kaynnistaValintakoelaskentaReitti" />
		<routeContextRef ref="valintakoelaskentaRoutes" />
	</camelContext>

</beans>
