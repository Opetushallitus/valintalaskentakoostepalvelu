<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ctx="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">


<ctx:annotation-config />
	<ctx:component-scan base-package="fi.vm.sade.valinta.kooste.hakemus.komponentti" />

    <bean id="hakuRetryHandler" class="org.apache.camel.builder.DefaultErrorHandlerBuilder" >
		<property name="redeliveryPolicy" ref="redeliveryPolicy"/>
	</bean>
	
	<camelContext depends-on="hakuRetryHandler" id="hakuAppCamelContext" autoStartup="true"
		xmlns="http://camel.apache.org/schema/spring">
		<proxy id="hakemusProxy" serviceInterface="fi.vm.sade.valinta.kooste.haku.HakemusProxy"
			serviceUrl="direct:hakemusReitti" />
		<proxy id="hakukohdeProxy" serviceInterface="fi.vm.sade.valinta.kooste.haku.HakukohdeProxy"
			serviceUrl="direct:hakukohdeReitti" />
		<proxy id="hakuProxy" serviceInterface="fi.vm.sade.valinta.kooste.haku.HakuProxy"
			serviceUrl="direct:hakuReitti" />

		<route errorHandlerRef="hakuRetryHandler">
			<from uri="direct:hakemusReitti" />
			<setProperty propertyName="hakemusOid">
				<simple>${body}</simple>
			</setProperty>
			<setBody>
				<constant></constant>
			</setBody>
			<to uri="bean:haeHakemusKomponentti" />
		</route>
		<route errorHandlerRef="hakuRetryHandler">
			<from uri="direct:hakukohdeReitti" />
			<setProperty propertyName="hakukohdeOid">
				<simple>${body}</simple>
			</setProperty>
			<setBody>
				<constant></constant>
			</setBody>
			<to uri="bean:haeHakukohteenHakemuksetKomponentti" />
		</route>
		<route errorHandlerRef="hakuRetryHandler">
			<from uri="direct:hakuReitti" />
			<setProperty propertyName="hakuOid">
				<simple>${body}</simple>
			</setProperty>
			<setBody>
				<constant></constant>
			</setBody>
			<to uri="bean:haeHaunHakemuksetKomponentti" />
		</route>
	</camelContext>

</beans>