<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ctx="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">


    <ctx:annotation-config/>
    <ctx:component-scan base-package="fi.vm.sade.valinta.kooste.valintalaskentatulos"/>
    <ctx:component-scan base-package="fi.vm.sade.valinta.kooste.valintalaskentatulos.proxy"/>
    <ctx:component-scan base-package="fi.vm.sade.valinta.kooste.valintalaskentatulos.komponentti"/>
    <ctx:component-scan base-package="fi.vm.sade.valinta.kooste.hakemus"/>

    <routeContext id="valintalaskentaTulosRoutes" xmlns="http://camel.apache.org/schema/spring">
        <route>
            <from uri="direct:kaynnistaJalkiohjaustulostenLuontiXlsMuodossaReitti"/>
            <policy ref="admin">
	            <to uri="bean:jalkiohjaustulosXlsKomponentti"/>
            </policy>
        </route>
        <route>
            <from uri="direct:sijoittelunTulosExcelReitti"/>
            <policy ref="admin">
            	<setProperty propertyName="hakuOid"><simple>${body.args[2]}</simple></setProperty>
            	<setProperty propertyName="sijoitteluajoId"><simple>${body.args[1]}</simple></setProperty>
	            <setProperty propertyName="hakukohdeOid"><simple>${body.args[0]}</simple></setProperty>
	            <to uri="bean:sijoittelunTulosXlsKomponentti"/>
            </policy>
        </route>
        <route>
            <from uri="direct:kaynnistaTulostenLuontiXlsMuodossaReitti"/>
            <policy ref="admin">
	            <setProperty propertyName="hakukohdeOid"><simple>${body.args[0]}</simple></setProperty>
	            <setProperty propertyName="valintakoeOid"><simple>${body.args[1]}</simple></setProperty>
	            <to uri="bean:luoTuloksetXlsMuodossa"/>
            </policy>
        </route>
        <route>
            <from uri="direct:kaynnistaValintalaskennanTulostenLuontiXlsMuodossaReitti"/>
            <policy ref="admin">
	            <setProperty propertyName="hakukohdeOid"><simple>${body.args[0]}</simple></setProperty>
	            <to uri="bean:luoValintalaskennanTuloksetXlsMuodossa"/>
            </policy>
        </route>
    </routeContext>

    <camelContext id="valintalaskentaTulosCamelContext"
                  autoStartup="true" xmlns="http://camel.apache.org/schema/spring">
        <!--
        	Sijoittelun tulosten excelointi! 
        -->
        <proxy id="sijoittelunTulosExcelProxy"
               serviceInterface="fi.vm.sade.valinta.kooste.valintalaskentatulos.proxy.SijoittelunTulosExcelProxy"
               serviceUrl="direct:sijoittelunTulosExcelReitti"/>
        <!-- 
        -->
        <proxy id="tulostenLuontiXlsMuodossaProxy"
               serviceInterface="fi.vm.sade.valinta.kooste.valintalaskentatulos.proxy.ValintakoekutsutExcelProxy"
               serviceUrl="direct:kaynnistaTulostenLuontiXlsMuodossaReitti"/>
        <!-- 
        -->
        <proxy id="valintalaskennanTulostenLuontiXlsMuodossaProxy"
               serviceInterface="fi.vm.sade.valinta.kooste.valintalaskentatulos.proxy.ValintalaskentaTulosExcelProxy"
               serviceUrl="direct:kaynnistaValintalaskennanTulostenLuontiXlsMuodossaReitti"/>
		
		<proxy id="jalkiohjaustulosXlsMuodossaProxy"
               serviceInterface="fi.vm.sade.valinta.kooste.valintalaskentatulos.proxy.JalkiohjaustulosExcelProxy"
               serviceUrl="direct:kaynnistaJalkiohjaustulostenLuontiXlsMuodossaReitti"/>
        <!-- 
        -->
        <routeContextRef ref="valintalaskentaTulosRoutes"/>
    </camelContext>
</beans>
