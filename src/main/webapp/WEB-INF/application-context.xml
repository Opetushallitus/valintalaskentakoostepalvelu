<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ctx="http://www.springframework.org/schema/context"
	xmlns:cxf="http://camel.apache.org/schema/cxf" xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:camel="http://camel.apache.org/schema/spring" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://camel.apache.org/schema/cxf
       http://camel.apache.org/schema/cxf/camel-cxf.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://cxf.apache.org/transports/camel http://cxf.apache.org/transports/camel.xsd http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<ctx:annotation-config />
	  <!--
    <ctx:property-placeholder location="classpath:META-INF/wsdlSource.properties"/>
      -->
    <ctx:property-placeholder
            location="classpath:META-INF/wsdlSource.properties, file:///${user.home:''}/oph-configuration/common.properties, file:///${user.home:''}/oph-configuration/valintalaskentakoostepalvelu.properties, file:///${user.home:''}/oph-configuration/override.properties"
            ignore-resource-not-found="true" />
	
	<!-- 
		Implementoi TarjontaHakuTiedotPalvelu kun määritelmä tarkentuu! Ajastettu Camel-reitti käyttää sitä!
	 -->
	<beans:bean id="tarjontaTiedotPalvelu" class="fi.vm.sade.valinta.kooste.tarjonta.stub.TarjontaHakuTiedotPalveluImpl"/>
	 
	
    <!--
	<ctx:component-scan base-package="fi.vm.sade.valinta.kooste.wsdlmock"/>
	-->

	<jaxws:client id="ValintaperusteServiceClient"
                  serviceClass="fi.vm.sade.service.valintaperusteet.ValintaperusteService"
                  address="${ValintaperusteService.url}" />
	
	<jaxws:client id="HakemusServiceClient"
                  serviceClass="fi.vm.sade.service.hakemus.HakemusService"
                  address="${HakemusService.url}" />
	
	<jaxws:client id="ValintalaskentaServiceClient" 
                  serviceClass="fi.vm.sade.service.valintalaskenta.ValintalaskentaService"
                  address="${ValintalaskentaService.url}" />

	<jaxws:client id="TarjontaServiceClient" 
                  serviceClass="fi.vm.sade.tarjonta.service.TarjontaPublicService"
                  address="${TarjontaService.url}" />

	
	<beans:import resource="classpath:META-INF/spring/context/tarjonta-ajastus-context.xml"/>
	<beans:import resource="classpath:META-INF/spring/context/valintakoe-context.xml"/>
	<beans:import resource="classpath:META-INF/spring/context/valintalaskenta-context.xml"/>
	
</beans>
